{
  "name": "pingframework/boot",
  "description": "Ping Framework is a basic port of java spring boot in PHP",
  "keywords": [
    "ping",
    "framework",
    "boot"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Oleg Bronzov",
      "email": "oleg.bronzov@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-openswoole": "*",
    "symfony/console": "^6.1",
    "pingframework/ping": "^0.1",
    "psr/log": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "*"
  },
  "autoload": {
    "psr-4": {
      "Pingframework\\Boot\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pingframework\\Boot\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "tests": "phpunit --coverage-clover=coverage.xml"
  }
}
