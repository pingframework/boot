{
  "name": "pingframework/boot",
  "description": "Ping Framework is a basic port of java spring boot in PHP",
  "keywords": [
    "ping",
    "framework",
    "boot"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Oleg Bronzov",
      "email": "oleg.bronzov@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-openswoole": "*",
    "psr/container": "1.0.0",
    "brick/varexporter": "^0.3",
    "ps/fluent-traversable": "^0.3",
    "league/event": "^3.0",
    "symfony/console": "^6.1",
    "slim/slim": "^4",
    "slim/psr7": "^1",
    "ilexn/swoole-convert-psr7": "^0.6"
  },
  "require-dev": {
    "phpunit/phpunit": "*"
  },
  "autoload": {
    "psr-4": {
      "Pingframework\\Boot\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pingframework\\Boot\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "tests": "phpunit --coverage-clover=coverage.xml",
    "pb": "pb"
  },
  "bin": [
    "bin/pb"
  ]
}
